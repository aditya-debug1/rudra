{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist" // Output directory for compiled JavaScript files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
